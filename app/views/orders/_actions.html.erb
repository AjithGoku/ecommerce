<% @orders.each do |order| %>

  <tr>

    <td>
      <%= order.user.first_name %>
    </td>

    <td>
      <%= order.total_price%>
    </td>

    <td>
      <%= order.orderstatus.order_status%>
    </td>

    <td>
      <%= link_to image_tag("eye-solid.svg", width: 20,float:"right"), order_path(order.id) %>  |  

        <%= link_to image_tag("pen-solid.svg", width: 20,float:"right"), edit_order_path(order.id) %>  |  

        <%= link_to image_tag("trash-solid.svg", width: 20,float:"right"), order_path(order.id), data: { "turbo-method": :delete } %>

    </td>
   
</tr>


     
  <% end %>
