<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit  Order</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :order, url: order_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :user_id %>
        <%= form.text_field :user_id, class: 'form-control' %>
      </div>
      <div class="form-group">
      <%= form.label :total_price %>
      <%= form.text_area :total_price, class: 'form-control' %>
    </div>
      <div class="form-group">
        <%= form.label :orderstatus_id %>
        <%= form.text_area :orderstatus_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
    <%= link_to 'Back to Main Page', order_path %>

  </div>

</div>
