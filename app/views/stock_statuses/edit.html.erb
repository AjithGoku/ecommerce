<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Stock Status</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @stock_status, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :status %>
      <%= form.text_field :status %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
<%= link_to 'Show', stock_status_path, class:"btn btn-outline-primary btn-sm" %> |
<%= link_to 'Back', stock_statuses_path, class:"btn btn-primary btn-sm" %>