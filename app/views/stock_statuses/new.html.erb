<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Stock Status</h4>
  </div>
  <div class="container">
    <%= form_with scope: :stockstatus, url: stock_statuses_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :status %>
      <%= form.text_field :status %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>

    <div>
      <br>
      <%= link_to 'Back', { controller: 'stock_statuses', action: 'index'}, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
</div>