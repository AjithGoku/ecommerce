    <div class="tab-content" id="dash-recent-orders-list">
        <% unless @orderItems.empty? %>
        <div class="tab-pane fade active show" id="kt_stats_widget_2_tab_1">
            <div class="table-responsive">
                <table class="table table-row-dashed align-middle gs-0 gy-4 my-0">
                    <thead>
                        <tr class="fs-7 fw-bolder text-gray-500 border-bottom-0">
                            <th class="ps-0 w-50px">ITEM</th>
                            <th class="min-w-140px"></th>
                            <th class="text-end min-w-140px">QTY</th>
                            <th class="pe-0 text-end min-w-120px">PRICE</th>
                            <th class="pe-0 text-end min-w-120px">TOTAL PRICE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @orderItems.each do |orderItem| %>
                        <tr>
                            <td>
                                <img id="product_pic" src="<%= orderItem.product.image_url %>" class="w-50px ms-n1"
                                    alt="" />
                            </td>
                            <td class="ps-0">
                                <a href="<%= product_path(orderItem.product) %>"
                                    class="text-gray-800 fw-bolder text-hover-primary mb-1 fs-6 text-start pe-0"
                                    id="product_name"> <%= orderItem.product.name %> </a>
                                <span class="text-gray-400 fw-bold fs-7 d-block text-start ps-0" id="order_id">Item:
                                    #<%= orderItem.order.id %></span>
                            </td>
                            <td>
                                <span class="text-gray-800 fw-bolder d-block fs-6 ps-0 text-end"
                                    id="quantity"><%= orderItem.quantity %></span>
                            </td>
                            <td class="text-end pe-0">
                                <span class="text-gray-800 fw-bolder d-block fs-6"
                                    id="price">₹<%= orderItem.actual_price %></span>
                            </td>
                            <td class="text-end pe-0">
                                <span class="text-gray-800 fw-bolder d-block fs-6"
                                    id="total_price">₹<%= orderItem.final_price %></span>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <% else %>
        <p>No orders to list</p>
        <% end %>
    </div>