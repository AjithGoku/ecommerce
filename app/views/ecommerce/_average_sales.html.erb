<div id="averagesales">
	<div class="card card-flush h-md-50 mb-xl-10">
		<div class="container" align="left">
			<div class="card-title d-flex flex-column">
				<div class="d-flex align-items-center">
                    <span class="text-secondary">$</span>
                    <h2><%= number_with_delimiter(@total_average_sales) %></h2> &nbsp
					<span class="badge bg-success" style="height:23px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                        </svg>
						2.6%
					</span>
				</div>
				<span class="text-secondary"><strong>Average Daily Sales</strong></span>							
			</div>										
		</div>
		<div class="card-body d-flex align-items-end pt-0">		
			<div class="d-flex align-items-center flex-column mt-3 w-100" style="height:120px">
                <%= column_chart @data, colors: ["#87CEFA"], prefix: "$", discrete: true, library: {vAxis: {gridlines: {color: "transparent"}}} %>
			</div>								
		</div>								
	</div>
</div>