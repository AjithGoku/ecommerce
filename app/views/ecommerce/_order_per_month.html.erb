<div id="orderpermonth">
	<div class="card card-flush h-md-50 mb-xl-10">
		<div class="container" align="left">
			<div class="card-title d-flex flex-column">
				<div class="d-flex align-items-center">
					<h2><%= number_with_delimiter(@totalorders) %></h2> &nbsp
					<span class="badge bg-danger" style="height:23px">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
						</svg>
						2.2%
					</span>
				</div>
				<span class="text-secondary"><strong>Orders This Month</strong></span>							
			</div>										
		</div>
		<div class="card-body d-flex align-items-end pt-0">		
			<div class="d-flex align-items-center flex-column mt-3 w-100">
				<div class="d-flex justify-content-between w-100 mt-auto mb-2">
					<span class="fw-boldest fs-6 text-dark"><strong><%= @ordergoal- @totalorders %> to Goal</strong></span>
					<span class="text-secondary"><strong><%= @orderpercent %>%</strong></span>
				</div>
			</div>								
		</div>	
		<div class="progress">
			<div class="progress-bar bg-success" 
			role="progressbar" 
			aria-valuenow=<% @orderpercent %> aria-valuemin="0" aria-valuemax="100" 
			style="width: <% @orderpercent %>%;">
				<%= number_to_percentage(@orderpercent, precision: 0) %> 
			</div>
		</div>							
	</div>
</div>