<div id="product-orders">
    <table class="table align-middle table-row-dashed">
        <thead>
            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                <th rowspan="1" colspan="1" style="width: 100px;">Order ID</th>
                <th rowspan="1" colspan="1" style="width: 100px;">Created
                </th>
                <th rowspan="1" colspan="1" style="width: 125px;">Customer
                </th>
                <th rowspan="1" colspan="1" style="width: 100px;">Total
                </th>
                <th rowspan="1" colspan="1" style="width: 100px;">Discount
                </th>
                <th rowspan="1" colspan="1" style="width: 93.125px;">Status
                </th>
                <th rowspan="1" colspan="1" style="width: 25px;"></th>
            </tr>
        </thead>
        <tbody>
            <% unless @list_items.empty? %>
                <% @list_items.each do |item| %>
                    <tr>
                        <td><%= p item.id%></td>
                        <td><%= item.created_at %></td>
                      
                        <td><%=  item.order.user.first_name%> <%=  item.order.user.last_name%></td>
                        <td><%=  item.final_price%></td>
                        <td><%=  item.discount_price %></td>
                        <td><%=  item.order.orderstatus.order_status%></td>
                    </tr>
                    <% end %>
                <% end %>
        </tbody>
    </table>
</div>