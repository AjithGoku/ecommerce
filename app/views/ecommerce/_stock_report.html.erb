<div id="stock-report">
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col" style="color:#B5B5C3">Item</th>
                <th scope="col" style="color:#B5B5C3">Product ID</th>
                <th scope="col" style="color:#B5B5C3">Date Added</th>
                <th scope="col" style="color:#B5B5C3">Price</th>
                <th scope="col" style="color:#B5B5C3">Status</th>
            </tr>
            </thead>
            <tbody>
                <% @p.each do |p| %>
                    <tr>
                    <td>
                        <strong><%= link_to p.name, product_path(p) %></strong>
                    </td>

                    <td>
                        <%= p.id %>
                    </td>

                    <td>
                        <%=  Date.parse(p.created_at.to_s).strftime("%e %b, %Y") %>
                    </td>

                    <td>
                        $<%= number_with_delimiter(p.price.to_s().gsub(".", "").to_i()/10) %>
                    </td>

                    <td>
                        <% if p.stock_status.status.eql?("Out of stock") %>
                            <span class="order-status-card col-md-3 out-status"><%= p.stock_status.status %></span>
                        <% end %>
                        <% if p.stock_status.status.eql?("Low stock") %>
                            <span class="order-status-card col-md-3 low-status"><%= p.stock_status.status %></span>
                        <% end %>
                        <% if p.stock_status.status.eql?("In stock") %>
                            <span class="order-status-card col-md-3 in-status"><%= p.stock_status.status %></span>
                        <% end %>
                    </td>

                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>