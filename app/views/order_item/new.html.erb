<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Orderitem</h4>
  </div>
  <div class="row justify-content-center">
   <div class="row">
    <div class="col-3">
    <%= form_with  scope: :orderitems, url: order_item_path, local: true do |form| %>
     <br/>
    <div class="form-group">

      <%= form.label :order %>

      <%= form.select :order_id, Orderstatus.all.collect {|u| [u.id, u.id]}, {}, class: "select" %>

    </div>
    <br/>
     
      <div class="form-group">

      <%= form.label :product %>

      <%= form.select :product_id, Orderstatus.all.collect {|u| [u.name, u.id]}, {}, class: "select" %>

    </div>
    <br/>
      <div class="form-group">
        <%= form.label :Actual %>
        <%= form.text_area :actual, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :discount_price %>
        <%= form.text_field :discount_price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :final_price %>
        <%= form.text_field :final_price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Quantity %>
        <%= form.text_area :quantity, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>

      </div>
    <% end %>
  </div>
   </div>
    </div>
</div>
