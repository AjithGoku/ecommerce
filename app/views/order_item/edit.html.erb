<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit  Order</h4>
  </div>
  <div class="row justify-content-center">
        <%= form_with(model: @orderitem, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :order_id %>
        <%= form.text_field :order_id, class: 'form-control' %>
      </div>
      <div class="form-group">
      <%= form.label :product %>
      <%= form.text_area :product, class: 'form-control' %>
    </div>
      <div class="form-group">
        <%= form.label :Actual %>
        <%= form.text_area :actual, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :discount_price %>
        <%= form.text_field :discount_price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :final_price %>
        <%= form.text_field :final_price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Quantity %>
        <%= form.text_area :quantity, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
    <%= link_to 'Back to Main Page', order_path %>

  </div>

</div>
