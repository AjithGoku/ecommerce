<div class="mx-auto bg-white text-dark" style="width: 50%">
  <div class="card-body p-md-8 mx-md-3">
    <div class="container">
      <div class="row justify-content-center">
        <h4 class="mt-4 mb-4 display-4">Edit Order</h4>
      </div>
      <div class="row justify-content-center">
        <%= form_with scope: :orderitem, url: order_items_path, local: true do |form| %>
          <div class="form-group">

            <%= form.label :order %>

              <%= form.select :order_id, Order.all.collect {|u| [u.id, u.id]}, {}, class: "select" %>

          </div>
          <br />

          <div class="form-group">

            <%= form.label :product %>

              <%= form.select :product_id, Product.all.collect {|u| [u.name, u.id]}, {}, class: "select" %>

          </div>
          <div class="form-group">
            <%= form.label :Actual %>
              <%= form.text_field :actual_price, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :discount_price %>
              <%= form.text_field :discount_price, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :final_price %>
              <%= form.text_field :final_price, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :Quantity %>
              <%= form.text_field :quantity, class: 'form-control' %>
          </div>
          <br />
          <div class="form-group">
            <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
          </div>
          <% end %>
            <%= link_to "Back" , :back, class:"btn btn-outline-danger" %>


      </div>

    </div>