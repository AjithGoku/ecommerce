<div class="mx-auto bg-white text-dark" style="width: 60%">
  <div class="card-body p-md-8 mx-md-3">
    <%= link_to "Wanna Go Back!" , :back, class:"btn btn-outline-danger" %>
    <%= render "devise/shared/error_messages" , resource: resource %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: {
          turbo: false }) do |f| %>
    <br>
    <p>Edit your profile</p>
    <div class="row">
      <div class="form-outline col-md-6">
        <%= f.label :first_name, "First Name" %><br>
        <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder:"Enter your first
                  name"%>
      </div>

      <div class="form-outline col-md-6">
        <%= f.label :last_name, "Last Name" %><br>
        <%= f.text_field :last_name, class:"form-control", placeholder:"Enter your last name" %>
      </div>
    </div>
    <br>
    <div class="row">

      <div class="form-outline col-md-6">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control",
                  placeholder:"Enter your email" %>
      </div>

      <div class="form-outline col-md-6">
        <%= f.label :phone_number, "Phone Number" %><br>
        <%= f.telephone_field :phone_number, class:"form-control", placeholder:"Enter your phone number" %>
      </div>
    </div>
    <br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
    <% end %>
    <div class="form-outline">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br>
      <%= f.password_field :current_password, autocomplete: "current-password" , class:"form-control",
                    placeholder:"Enter current password for verification" %>
    </div>
    <br>
    <div class="row">
      <div class="form-outline col-md-6">
        <%= f.label :password, "New Password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> char minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" , class:"form-control",
                          placeholder:"Enter your new password" %>
      </div>

      <div class="form-outline col-md-6">
        <%= f.label :password_confirmation, "Confirm New Password" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control",
                      placeholder:"Re-enter your new password" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-outline col-md-6">
        <%= f.label :birthday, "DOB" %><br>
        <%= f.date_field :birthday, class:"form-control" %>
      </div>

      <div class="form-outline col-md-6">
        <label for="user_gender">Gender</label>
        <br>
        <%= f.radio_button :gender, "Male" , class:"form-check-input" %>
        <%= f.label :gender_male, "Male" , class: "form-check-label" %>
        <%= f.radio_button :gender, "Female" , class:"form-check-input" %>
        <%= f.label :gender_female, "Female" , class: "form-check-label" %>
        <br>
      </div>
    </div>
    <br>

    <div class="form-outline mb-4">
      <%= f.label :profile_picture_url, "Profile Pic URL" %><br>
      <%= f.text_field :profile_picture_url, class:"form-control", placeholder:"Enter your profile picture
                    url" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :Address %><br>
      <%= f.text_area :address, class:"form-control", placeholder:"Enter your full address" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :about, "About Me" %><br>
      <%= f.text_area :about, class:"form-control", placeholder:"Enter anything about yourself"%>
    </div>

    <div class="text-center pt-1 mb-3 pb-1">
      <%= f.submit "Update" , class:"btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
    </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy?
      <%= button_to "Delete my account" , registration_path(resource_name), data: { confirm: "Are you sure?"
                    }, method: :delete, class:"btn btn-outline-danger" %>
    </p>
  </div>
</div>