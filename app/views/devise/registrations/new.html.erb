<div class="mx-auto bg-white text-dark" style="width: 50%">
<div class="card-body p-md-8 mx-md-3">
<!-- <div class="text-center">
    <h3>E-Commerce</h3>
</div>
-->
<div class="text-center">
    <h4>You are just one step away!</h4>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br/>
  <p>Create your account</p>
  <div class="row">
  <div class="form-outline col-md-6">
    <%= f.label :first_name, "First Name" %><br>
    <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder:"Enter your first name"%>
  </div>

  <div class="form-outline col-md-6">
    <%= f.label :last_name, "Last Name" %><br>
    <%= f.text_field :last_name, class:"form-control", placeholder:"Enter your last name" %>
  </div>
  </div>
  <br/>
  <div class="form-outline mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:"form-control", placeholder:"Enter your email" %>
  </div>
  <div class="row">
  <div class="form-outline col-md-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> char minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Enter your password" %>
  </div>
  <div class="form-outline col-md-6">
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Re-enter password" %>
  </div>
  </div>
  <br/>
  <div class="row">
  <div class="form-outline col-md-6">
    <%= f.label :birthday, "DOB" %><br>
    <%= f.date_field :birthday, class:"form-control" %>
  </div>
  <div class="form-outline col-md-6">
    <%= f.label :phone_number, "Phone Number" %><br>
    <%= f.telephone_field :phone_number, class:"form-control", placeholder:"Enter your prone number"%>
  </div>
  </div>
  <br/>
  <div class="form-outline mb-4">
    <label for="user_gender">Gender</label>
    <br/>
    <%= f.radio_button :gender, "Male", class:"form-check-input", checked: true %>
    <%= f.label :gender_male, "Male", class: "form-check-label" %>
    <%= f.radio_button :gender, "Female", class:"form-check-input" %>
    <%= f.label :gender_female, "Female", class: "form-check-label" %>
    <br/>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :profile_picture_url, "Profile Pic URL" %><br>
    <%= f.text_field :profile_picture_url, class:"form-control", placeholder:"Enter your profile picture url" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :Address %><br>
    <%= f.text_area :address, class:"form-control", placeholder:"Enter your full address" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :about, "About Me" %><br>
    <%= f.text_area :about, class:"form-control", placeholder:"Enter anything about yourself"%>
  </div>


  <div class="text-center pt-1 mb-3 pb-1">
    <%= f.submit "Sign up", class:"btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>