<div class="mx-auto bg-white text-dark" style="width: 50%">
  <div class="card-body p-md-8 mx-md-3">
    <div class="container">
      <div class="row justify-content-center">
        <h4 class="mt-4 mb-4 display-4">Edit Orderstatus</h4>
      </div>
      <div class="row justify-content-center">
        <%= form_with(model: @orderstatus, local: true) do |form| %>
        <%= p "edit order status"%>
        <%= p @orderstatus.order_status%>
        <div class="form-group">
          <%= form.label :order_status %>
          <%= form.text_field :order_status, class: 'form-control' %>
        </div>
        <br />
        <div class="form-group">
          <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3"%>
        </div>
        <div>
          <br />
          <%= link_to 'Back' , :back, class:"btn btn-outline-danger" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>