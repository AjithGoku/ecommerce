<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4"> Product Category Details </h4>
  </div>

  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Product Category</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td>
              <%= @product_category.name %>
            </td>

            <td>
              <%= link_to 'Edit' , edit_product_category_path(@product_category), class:"btn btn-outline-danger" %>
            </td>

            <td>
              <%= button_to "Delete" , product_category_path(@product_category), method: :delete, class:"btn btn-danger" ,form: {
                data: { turbo_confirm: "Are you sure you want to delete?" } }%>
            </td>

          </tr>
      </tbody>
    </table>
    <div>
      <%= link_to 'Create new discount percentage' , new_product_category_path, class:"btn btn-outline-danger" %>
    </div>
    <br /><br />
    <div>
      <%= link_to 'Back to Index' , product_categories_path, class:"btn btn-outline-danger" %>
    </div>
  </div>
</div>