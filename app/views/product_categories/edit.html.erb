<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Product Category</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @product_category, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
  <%= link_to 'Show', class:"btn btn-outline-primary", @product_category %> |
  <%= link_to 'Back', product_categories_path, class:"btn btn-primary btn-sm" %>
</div>