<div class="container">
  <h1>Product Category</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @product_categories.each do |productcategory| %>
      <tr>
        <td><%= productcategory.name %></td>
        <td>
          <%= link_to 'Show', product_category_path(productcategory), class:"btn btn-outline-primary btn-sm" %>
          <%= link_to 'Edit', edit_product_category_path(productcategory), class:"btn btn-outline-warning btn-sm" %>
          <%= button_to 'Delete', product_category_path(productcategory), method: :delete, class:"btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Product Category', new_product_category_path %><br><br>
  <%= link_to 'Back', products_path, class:"btn btn-primary btn-sm" %>
</div>
