<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Product Discount</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @discount, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :percentage %>
      <%= form.number_field :percentage, step: :any %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @discount, class:"btn btn-outline-primary btn-sm" %> |
<%= link_to 'Back', discounts_path, class:"btn btn-primary btn-sm" %>