<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Product Discount</h4>
  </div>
  <div class="container">
    <%= form_with scope: :discount, url: discounts_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :percentage %>
      <%= form.number_field :percentage, step: :any %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>

    <div>
      <br>
      <%= link_to 'Back', { controller: 'discounts', action: 'index'}, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
</div>