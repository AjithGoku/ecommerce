<% @discounts.each do |discount| %>
    <tr>
      <td><%= discount.percentage %></td>
      <td><%= link_to 'Show', discount_path(discount), class:"btn btn-outline-primary" %></td>
      <td><%= link_to 'Edit', edit_discount_path(discount), class:"btn btn-outline-warning" %></td>
      <td><%= button_to 'Delete', discount_path(discount), method: :delete, class:"btn btn btn-danger" %></td>
    </tr>
<% end %>