<% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= truncate(product.description, :length => 75) %></td>
      
      <td><%= product.stock_status.status if product.stock_status.present? %></td>
      <td><%= product.discount.percentage if product.discount.present? %>%</td>
      <% if can? :manage, @product %>
      <td>
        <div class="col">           
          <%= link_to 'Edit', edit_product_path(product), class:"btn btn-outline-warning btn-sm" %>
          <%= button_to 'Delete', product_path(product.id), method: :delete, class:"btn btn-outline-danger btn-sm", form: { data: { turbo_confirm: "Are you sure you want to delete?" } } %>
        </div>
      </td>
      <% end %>
    </tr>
<% end %>