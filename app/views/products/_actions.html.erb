<% @products.each do |product| %>
<tr>
  <td><%= link_to product.name, product_path(product) %></td>
  <td><%= product.price %></td>
  <td><%= truncate(product.description, :length => 75) %></td>

  <td><%= product.stock_status.status if product.stock_status.present? %></td>
  <td><%= product.discount.percentage if product.discount.present? %>%</td>
  <% if can? :manage, @product %>
    <div class="col">
      <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-outline-danger" %></td>
      <td>
        <%= button_to 'Delete', product_path(product.id), method: :delete, class:"btn btn btn-danger", form: { data: { turbo_confirm: "Are you sure you want to delete?" } } %>
      </td>
    </div>
  <% end %>
</tr>
<% end %>