<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Product</h4>
  </div>
  <div class="container">
    <%= form_with scope: :product, url: products_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :image_url %>
      <%= form.text_field :image_url %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, step: :any %>
    </div>

    <div class="form-group">
      <%= form.label :discount %>
      <%= form.select :discount_id, Discount.all.collect {|u| [u.percentage, u.id]}, {}, class: "select" %>
    </div>

    <div class="form-group">
      <%= form.label :product_category %>
      <%= form.select :product_category_id, ProductCategory.all.collect {|u| [u.name, u.id]}, {}, class: "select" %>
    </div>

    <div class="form-group">
      <%= form.label :stock_status %>
      <%= form.select :stock_status_id, StockStatus.all.collect {|u| [u.status, u.id]}, {}, class: "select" %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>

    <div>
      <br>
      <%= link_to 'Back', { controller: 'products', action: 'index'}, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
</div>